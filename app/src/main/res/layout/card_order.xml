<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_order="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_orderTextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="22dp"
        android:text="Title"
        android:textSize="18dp"
        card_order:layout_constraintStart_toStartOf="parent"
        card_order:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_orderTextPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:text="price"
        android:textSize="14dp"
        card_order:layout_constraintStart_toStartOf="parent"
        card_order:layout_constraintTop_toBottomOf="@+id/textView_orderTextItem" />

    <TextView
        android:id="@+id/textView_orderTextQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="qty"
        android:textSize="14dp"
        card_order:layout_constraintStart_toEndOf="@+id/textView_orderTextPrice"
        card_order:layout_constraintTop_toTopOf="@+id/textView_orderTextPrice" />

    <TextView
        android:id="@+id/textView_orderTextTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:text="Total price"
        android:textSize="14dp"
        card_order:layout_constraintStart_toStartOf="parent"
        card_order:layout_constraintTop_toBottomOf="@+id/textView_orderTextPrice" />

    <Button
        android:id="@+id/button_orderClearButton"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:text="Clear"
        card_order:layout_constraintEnd_toEndOf="parent"
        card_order:layout_constraintHorizontal_bias="0.976"
        card_order:layout_constraintStart_toStartOf="parent"
        card_order:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_orderItem"
        android:layout_width="98dp"
        android:layout_height="101dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        card_order:layout_constraintStart_toStartOf="parent"
        card_order:layout_constraintTop_toTopOf="parent"
        card_order:srcCompat="@mipmap/ic_launcher" />

</androidx.constraintlayout.widget.ConstraintLayout>